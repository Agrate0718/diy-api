<h2>Update Car</h2>
<div style="display:block">
    <h3 style="font-weight: Bold"><%=cars.name%>,<%=cars.color%>,<%=cars.year%></h3>
</div>
<div>
<form method="POST" action="/cars/<%=cars.id%>/?_method=PUT">
    <label>Name</label>
    <input type="text" name="name" value="<%= cars.name %>" required>
    <label>year</label>
    <input type="text" name="year" value="<%= cars.year %>" required>
    <label>color</label>
    <input type="text" name="color" value="<%= cars.color %>" required>
    <input type="submit">
</form>
</div>
